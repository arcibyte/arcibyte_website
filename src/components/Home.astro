---
import { useTranslations } from "../i18n/utils";
import { Mail, ArrowRight, Github, Linkedin } from "lucide-astro";

const { lang } = Astro.props;
const t = useTranslations(lang);

const socials = [
  { icon: Github, href: "https://github.com/arcibyte", label: "Github" },
  {
    icon: Linkedin,
    href: "https://linkedin.com/in/arcibyte",
    label: "Linkedin",
  },
];
---

<section class="relative min-h-[70vh] flex items-center py-24">
  <div transition:animate="initial" class="max-w-4xl mx-auto px-6 w-full">
    <div class="flex flex-col gap-6">
      <span class="text-primary">
        {t("profile.name")}
      </span>

      <h1
        class="text-2xl md:text-3xl tracking-tighter text-primary leading-[0.85]"
      >
        {t("profile.role")}
      </h1>

      <p class="max-w-xl text-base text-foreground leading-relaxed">
        {t("profile.description")}
      </p>

      <div class="flex flex-wrap items-center gap-y-6 gap-x-4 md:gap-x-6 pt-4">
        <a
          href="mailto:arcibyte@gmail.com"
          class="group flex items-center gap-2 py-1 text-foreground transition-all duration-300 hover:text-primary active:opacity-70"
        >
          <Mail class="w-4 h-4 stroke-[1.5px] opacity-70" />

          <span class="text-base font-medium tracking-tight whitespace-nowrap">
            {t("profile.cta")}
          </span>

          <ArrowRight
            class="w-3.5 h-3.5 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300"
          />
        </a>

        <div class="flex items-center gap-5">
          {
            socials.map(({ icon: Icon, href, label }) => (
              <a
                href={href}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 text-foreground hover:text-primary transition-colors duration-300"
              >
                <Icon class="w-4 h-4 stroke-[1.5px]" />
                <span class="text-base font-medium tracking-tight">
                  {label}
                </span>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
