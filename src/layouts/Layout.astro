---
interface Props {
  title: string;
  lang?: string;
}
const { title, lang } = Astro.props;
import Header from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const currentLang = lang || Astro.currentLocale || "es";
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link
      rel="preload"
      href="/fonts/space-grotesk-v22-latin-700.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/outfit-v15-latin-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Jhon Arciniegas" />

    <title>{title}</title>

    <link rel="icon" href="/img/icon.png" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content="Jhon Arciniegas | Portfolio" />
    <meta
      property="og:description"
      content="Applied data science, machine learning, and software engineering."
    />
    <meta property="og:image" content="https://arcibyte.is-a.dev/img/OP.jpg" />
    <meta property="og:url" content="https://arcibyte.is-a.dev" />
    <meta property="og:image:width" content="1620" />
    <meta property="og:image:height" content="1080" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Jhon Arciniegas | Portfolio" />
    <meta
      name="twitter:description"
      content="Applied data science, machine learning, and software engineering."
    />
    <meta name="twitter:image" content="https://arcibyte.is-a.dev/img/OP.jpg" />
  </head>

  <body class="bg-background p-4 sm:p-0 mx-auto max-w-[580px] text-base">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
  @font-face {
    font-family: "Space Grotesk";
    src: url("/fonts/space-grotesk-v22-latin-700.woff2") format("woff2");
    font-weight: 700;
    font-style: normal;
    font-display: block;
  }

  @font-face {
    font-family: "Outfit";
    src: url("/fonts/outfit-v15-latin-regular.woff2") format("woff2");
    font-weight: 400;
    font-style: normal;
    font-display: block;
  }

  html,
  body {
    font-family: "Outfit", sans-serif;
    -webkit-font-smoothing: antialiased;
  }

  h1,
  h2,
  h3,
  h4,
  .nav-link,
  button {
    font-family: "Space Grotesk", sans-serif !important;
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  h1 {
    font-size: 2.5rem;
    line-height: 1.1;
  }

  p {
    font-family: "Outfit", sans-serif;
    line-height: 1.6;
  }
  @layer base {
    :root {
      --background: oklch(97% 0 0);
      --primary: oklch(21% 0.006 285.885);
      --foreground: oklch(37% 0.013 285.805);
      --border: oklch(55.6% 0 0);
      --muted: oklch(92.2% 0 0);
    }
  }
</style>
